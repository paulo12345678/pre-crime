@model IEnumerable<Model.Models.Ocorrencia>

@{
    ViewData["Title"] = "Lista de Ocorrências";
}

<h2>Lista</h2>

<p>
    <a asp-action="Create">Criar uma Nova Ocorrência</a>
</p>
@if (Model == null)
{
    <p>Nem uma ocorrência cadastrada</p>

}
else
{

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Data)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Latitude)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Longitude)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hora)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prejuizo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Latitude)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Longitude)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hora)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prejuizo)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new {  id=item.Id }) |
                        @Html.ActionLink("Detailes", "Details", new {  id=item.Id }) |
                        @Html.ActionLink("Apagar", "Delete", new {  id=item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}