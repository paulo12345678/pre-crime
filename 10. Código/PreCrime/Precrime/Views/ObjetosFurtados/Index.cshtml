@model IEnumerable<Model.Models.ObjetosFurtados>

@{
    ViewData["Title"] = "Lista";
}

<h2>Lista de Objetos Furtados</h2>

<p>
    <a asp-action="Cadastrar">Novo</a>
</p>
@if (Model == null)
{
    <p>Objetos Não Cadastrados</p>

}
else
{

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new {  id=item.Id  }) |
                        @Html.ActionLink("Detailes", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Apagar", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
